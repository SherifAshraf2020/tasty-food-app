<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.tasty_food_app.splash.view.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_auth_graph"
            app:destination="@id/auth_graph"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_home_nav_graph"
            app:destination="@id/home_nav_graph"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.tasty_food_app.onboarding.view.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPagerFragment_to_auth_graph"
            app:destination="@id/auth_graph"
            app:popUpTo="@id/viewPagerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <include app:graph="@navigation/auth_graph" />
    <include app:graph="@navigation/home_nav_graph" />

    <action
        android:id="@+id/action_auth_graph_to_home_nav_graph"
        app:destination="@id/home_nav_graph"
        app:popUpTo="@id/auth_graph"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.tasty_food_app.home.home.search.view.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />

    <action
        android:id="@+id/action_discoverFragment_to_searchFragment"
        app:destination="@id/searchFragment" />


    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.tasty_food_app.home.home.details.view.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" />

    <action
        android:id="@+id/action_discoverFragment_to_mealDetailsFragment"
        app:destination="@id/detailsFragment" />

    <action
        android:id="@+id/action_favoritesFragment_to_mealDetailsFragment"
        app:destination="@id/detailsFragment" />




        <action
            android:id="@+id/action_recentlyFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />




</navigation>